<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rl_simple_dialog_container"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:background="@drawable/rectangle_login_dialog"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_simple_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:maxWidth="300dp"
                android:text="提示"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_simple_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9.6dp"
                android:maxEms="11"
                android:maxLines="1"
                android:text="你想做什么呢？"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginTop="14.4dp"
                android:background="#e7e7e7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_simple_dialog_cancel"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="取消"
                    android:textSize="16sp"
                    android:textColor="#2872C1"/>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:background="#e7e7e7"/>

                <Button
                    android:id="@+id/b_simple_dialog_confirm"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="确定"
                    android:textSize="16sp"
                    android:textColor="#2872C1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>